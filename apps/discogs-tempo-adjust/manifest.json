{
  "manifest_version": 3,
  "version": "0.1.0",
  "name": "Discogs Tempo Adjust",
  "description": "A browser extension to detect and adjust track tempo on Discogs",
  "icons": {
    "16": "assets/icon-16.png",
    "128": "assets/icon-128.png"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.discogs.com/*"],
      "js": ["./src/content/discogs/index.tsx"]
    },
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.youtube-nocookie.com/*"
      ],
      "js": ["./src/content/youtube/index.ts"],
      "all_frames": true
    }
  ],
  "background": {
    "type": "module",
    "service_worker": "./src/background/index.ts",
    "scripts": ["./src/background/index.ts"]
  },
  "action": {
    "default_icon": "./assets/icon-128.png"
  },
  "permissions": ["storage"]
}
