{
  "name": "bandcamp-tempo-adjust",
  "version": "0.1",
  "description": "A browser extension to detect and adjust track tempo on Bandcamp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/azarbayejani/bandcamp-tempo-adjust.git"
  },
  "scripts": {
    "build-firefox": "rm -f web-ext-artifacts/*.zip; BROWSER_TARGET=firefox yarn build; web-ext build --source-dir build/; git archive --format zip --output web-ext-artifacts/bandcamp-tempo-adjust-source.zip HEAD",
    "build": "node utils/build.js",
    "start": "node utils/webserver.js",
    "start-firefox": "BROWSER_TARGET=firefox node utils/webserver.js",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "production": "NODE_ENV=production yarn build"
  },
  "dependencies": {
