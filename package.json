{
  "name": "@tempo-adjust/monorepo",
  "version": "0.1",
  "description": "A browser extension to detect and adjust track tempo on the web",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/azarbayejani/bandcamp-tempo-adjust.git"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "check": "pnpm -r exec tsc",
    "dev:bandcamp": "pnpm --filter bandcamp-tempo-adjust dev",
    "dev:discogs": "pnpm --filter discogs-tempo-adjust dev",
    "build": "pnpm build:chrome && pnpm build:firefox",
    "build:chrome": "pnpm --filter './apps/**' build",
    "build:firefox": "pnpm --filter './apps/**' build -b firefox --mv3",
    "test": "vitest",
    "zip": "pnpm zip:chrome && pnpm zip:firefox",
    "zip:chrome": "pnpm --filter './apps/**' zip",
    "zip:firefox": "pnpm --filter './apps/**' zip -b firefox --mv3",
    "submit:bandcamp": "pnpm --filter bandcamp-tempo-adjust submit"
  },
  "dependencies": {
    "@json2csv/plainjs": "^7.0.6",
    "@tanstack/react-query": "^4.28.0",
    "@tanstack/react-query-devtools": "^4.28.0",
    "immer": "^9.0.17",
    "p-queue": "^8.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-select": "^5.7.2",
    "web-audio-beat-detector": "^8.1.40",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.202",
    "@types/json2csv": "^5.0.3",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/webextension-polyfill": "^0.9.2",
    "@wxt-dev/module-react": "^1.1.1",
    "eslint": "^8.27.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^11.2.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jsdom": "^24.0.0",
    "parcel": "2.0.0-canary.1728",
    "prettier": "^2.7.1",
    "rimraf": "^6.0.1",
    "sass": "^1.71.0",
    "sass-loader": "^13.2.0",
    "source-map-loader": "^3.0.1",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "web-ext": "^7.11.0",
    "wxt": "^0.19.11"
  },
  "resolutions": {
    "@types/react": "18.3.1"
  },
  "packageManager": "pnpm@9.12.3"
}
