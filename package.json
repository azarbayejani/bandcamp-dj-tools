{
  "name": "bandcamp-tempo-adjust",
  "version": "0.1",
  "description": "A browser extension to detect and adjust track tempo on Bandcamp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/azarbayejani/bandcamp-tempo-adjust.git"
  },
  "scripts": {
    "watch": "parcel watch src/manifest.json --host localhost",
    "launch:chrome": "web-ext run -s dist/ --target chromium",
    "start:chrome": "concurrently \"yarn watch\" \"yarn launch:chrome\"",
    "launch:firefox": "web-ext run -s dist/ --target firefox-desktop",
    "start:firefox": "concurrently \"yarn watch\" \"yarn launch:firefox\"",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "clean": "rimraf dist .parcel-cache web-ext-artifacts",
    "build": "yarn clean && tsc --noEmit && parcel build src/manifest.json --no-cache && yarn package",
    "package": "web-ext build --source-dir dist && git archive --format zip --output web-ext-artifacts/bandcamp-tempo-adjust-source.zip HEAD"
  },
  "dependencies": {
    "@json2csv/plainjs": "^7.0.6",
    "@tanstack/react-query": "^4.28.0",
    "@tanstack/react-query-devtools": "^4.28.0",
    "immer": "^9.0.17",
    "p-queue": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-select": "^5.7.2",
    "web-audio-beat-detector": "^8.1.40",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "2.12.1-canary.3345",
    "@parcel/transformer-sass": "2.0.0-canary.1722",
    "@parcel/validator-typescript": "^2.12.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "12",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.202",
    "@types/json2csv": "^5.0.3",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.11",
    "@types/webextension-polyfill": "^0.9.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.27.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^10.1.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jsdom": "^24.0.0",
    "parcel": "2.0.0-canary.1728",
    "prettier": "^2.7.1",
    "rimraf": "^6.0.1",
    "sass": "^1.71.0",
    "sass-loader": "^13.2.0",
    "source-map-loader": "^3.0.1",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "typescript": "^5.6.3",
    "vitest": "^1.3.0",
    "web-ext": "^7.11.0"
  },
  "browserslist": "> 0.5%, last 5 versions, not dead",
  "packageManager": "yarn@4.5.0",
  "workspaces": [
    "packages/*"
  ]
}
